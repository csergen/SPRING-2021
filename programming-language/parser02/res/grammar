<program>: [int | void] main () <scope>

<sentences>: { <sentence> }

<sentence>: 
  ;             |
  <scope>       |
  <declaration> |
  <assign>      |
  <ifstmt>      |
  <forstmt>     |
  <whilestmt>   |

<declaration>:
  <type> <id> {, <id>}

<type>:
  int | float | double | char | void

<id>: _a-Z0-9

<scope>: '{' <sentences> '}'

<assign>:
  [<type>] <id> ( = | += | -= | *= | /= ) <expression>

{* <conj> || <conj> || <conj> || ... *}
<expression>: <conj> { || <conj> }

{* <relation> && <relation> && <relation> && ... *}
<conj>: <relation> { && <relation> }

<relation>: <addition> { [ < | <= | > | >= | == | != ] addition}

<addition>: <term> { (+ | -) <term> }

<term>: <negation> { (* | /) <negation> }

<negation>: ! <factor>

<factor>: <id> | <literal> | (<expression>)

<ifstmt>: if ({ <expression> }) <scope>
          { elseif ( { <expression> } ) <scope> }
          [ else <scope> ]

<forstmt>: for ([<assign>]; [<expression>]; [<id><assign>]) <scope>